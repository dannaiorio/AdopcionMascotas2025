<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Refugio de Mascotas</title>

    <!-- CSS propio -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Fuente Life Savers -->
    <link href="https://fonts.googleapis.com/css2?family=Life+Savers:wght@400;700&display=swap" rel="stylesheet">

    <!-- Bootstrap (opcional, por si lo usás en otras vistas) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Header / Navbar -->
    <header>
        <div class="contenedor-superior">
            <img src="/images/NewFolder/huella violeta.png" alt="Huella izquierda" class="huella izq">

            <nav class="menu-superior">
                <a asp-area="" asp-controller="Mascotas" asp-action="Index">ADOPTÁ</a>
                <a asp-area="" asp-controller="Home" asp-action="Info">INFO</a>
                <a asp-area="" asp-controller="Home" asp-action="Donar">DONÁ</a>
                <a asp-area="" asp-controller="Mascotas" asp-action="Adoptados">ADOPTADOS</a>
                <a asp-area="Admin" asp-controller="Auth" asp-action="Login" class="btn-admin">SECCIÓN ADMIN</a>
            </nav>

            <img src="/images/NewFolder/huella violeta.png" alt="Huella derecha" class="huella der">
        </div>
    </header>

    <!-- Contenido de cada página -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="footer-fijo">
        <p>&copy; 2025 - Refugio de Mascotas</p>
        <a href="/Admin/Mascotas"
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


