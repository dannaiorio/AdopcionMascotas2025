@model IEnumerable<AdopcionMascotas.Models.Mascota>

@{
    ViewData["Title"] = "Lista de Mascotas";
}

<h2 class="mb-4">Mascotas en Adopción 🐾</h2>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">¿Qué tipo de mascota estás buscando?</h5>
                <div class="btn-group" role="group" aria-label="Filtros de mascotas">
                    <a asp-controller="Mascotas" asp-action="Index" class="btn btn-outline-primary btn-lg">
                        🐾 Ver Todas
                    </a>
                    <a asp-controller="Mascotas" asp-action="Gatos" class="btn btn-outline-warning btn-lg">
                        🐱 Ver Gatos
                    </a>
                    <a asp-controller="Mascotas" asp-action="Perros" class="btn btn-outline-success btn-lg">
                        🐶 Ver Perros
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-primary">🐾 Total</h5>
                <h2 class="text-primary">@Model.Count()</h2>
                <p class="card-text">mascotas en adopción</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-warning">🐱 Gatos</h5>
                <h2 class="text-warning">@Model.Count(m => m.Especie == AdopcionMascotas.Models.EspecieMascota.Gato)</h2>
                <p class="card-text">gatitos esperando</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-success">🐶 Perros</h5>
                <h2 class="text-success">@Model.Count(m => m.Especie == AdopcionMascotas.Models.EspecieMascota.Perro)</h2>
                <p class="card-text">perritos esperando</p>
            </div>
        </div>
    </div>
</div>

<h3 class="mb-3">Todas nuestras mascotas:</h3>

<div class="row">
    @foreach (var m in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card-mascota">
                <img src="@m.Imagen" alt="@m.Nombre" />
                <h3>@m.Nombre</h3>
                <p><strong>Especie:</strong> @m.Especie</p>
                <p><strong>Edad:</strong> @m.Edad años</p>
                <p><strong>Estado:</strong> @m.Estado</p>

                <a asp-controller="Mascotas" asp-action="Detalle" asp-route-id="@m.Id" class="btn btn-primary">
                    ¡Preguntá por mí!
                </a>
            </div>
        </div>
    }
</div>

