@model AdopcionMascotas.Models.Mascota

@{
    ViewData["Title"] = "Detalles de Mascota";
}

<h1 class="titulo-seccion text-center mb-4">Conocé a @Model.Nombre</h1>

<div class="container">
    <div class="card-mascota-horizontal shadow-sm mb-5">
        <div class="row g-0 align-items-center">
            
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                {
                    <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-details" />

                }
                else
                {
                    <div class="img-placeholder">
                        <span>Sin imagen</span>
                    </div>
                }
            </div>

            <!-- Info -->
            <div class="col-md-8">
                <div class="card-body d-flex flex-column justify-content-between h-100">

                   
                    <div class="d-flex align-items-center mb-2">
                        @if (Model.Especie == AdopcionMascotas.Models.EspecieMascota.Perro)
                        {
                            <span class="icono-mascota me-2">🐶</span>
                        }
                        else if (Model.Especie == AdopcionMascotas.Models.EspecieMascota.Gato)
                        {
                            <span class="icono-mascota me-2">🐱</span>
                        }

                        <h4 class="nombre-mascota mb-0">@Model.Nombre</h4>
                    </div>

                    <p><strong>Especie:</strong> @Model.Especie</p>
                    <p><strong>Estado:</strong> @Model.Estado</p>
                    <p><strong>Edad:</strong> @Model.Edad año(s)</p>
                    <p><strong>Descripción:</strong> @Model.Descripcion</p>

                    <div class="mt-3">
                        <a asp-controller="Solicitudes" asp-action="Formulario" asp-route-idMascota="@Model.Id"
                           class="btn btn-mascota me-2"> ¡Adoptame!</a>

                        <a asp-action="EnAdopcion" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver al listado
                        </a>
                    </div>

                    <div class="alert alert-info mt-4">
                        <h5><i class="fas fa-home"></i> ¿Querés darme un hogar?</h5>
                        <p class="mb-0">¡Completá el formulario de adopción y pronto podremos conocernos!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver a la lista
    </a>
</div>