@{
    ViewData["Title"] = "Formulario de Contacto";
}

<div class="card-formulario">
    <h2>Contáctanos</h2>

    <form method="post" action="/Home/FormContacto">
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" placeholder="Dejanos tu nombre" required />

        <label for="email">Correo electrónico</label>
        <input type="email" id="email" name="email" placeholder="tucorreo@ejemplo.com" required />

        <label for="telefono">Teléfono</label>
        <input type="tel" id="telefono" name="telefono" placeholder="Ej: +54 9 11 5555-5555" required pattern="[\+]?[0-9\s\-\(\)]{8,20}" title="Ingresá un número válido (ej: +54 9 11 5555-5555)" />

        <label for="mensaje">Mensaje</label>
        <textarea id="mensaje" name="mensaje" rows="4" placeholder="Dejanos tu mensaje aca..." required></textarea>

        <button type="submit">Enviar mensaje</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-success mt-3">
            @ViewBag.Mensaje
        </div>
    }
</div>

@await Html.PartialAsync("_BotonVolver")

