@{
    ViewData["Title"] = "Acceso Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card mt-5">
                <div class="card-header text-center bg-primary text-white">
                    <h4>üîê Acceso Administrador</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null && !string.IsNullOrEmpty(ViewBag.Error.ToString()))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }


                    <form method="post" asp-action="Login" asp-controller="Auth" asp-area="Admin">
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario:</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">Contrase√±a:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Iniciar Sesi√≥n</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-outline-secondary">
                    ‚Üê Volver al sitio principal
                </a>
            </div>
        </div>
    </div>
</div>