<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Refugio de Mascotas</title>

   
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Fuente Life Savers -->
    <link href="https://fonts.googleapis.com/css2?family=Life+Savers:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Fondo global de toda la aplicación */
        body.fondo-huellas {
            
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-color: #f8f9fa;
        }


      

        .footer-fijo {
            text-align: center;
            padding: 1rem 0;
            color: #555;
        }

        .btn-admin {
            background-color: #7a3ca3;
            color: #fff !important;
            padding: 8px 15px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .btn-admin:hover {
                background-color: #9c54c3;
                transform: scale(1.05);
            }

        .huella {
            width: 70px;
            mix-blend-mode: multiply; 
            opacity: 0.9; 
        }

        .contenedor-superior {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 30px;
        }

        .menu-superior a {
            margin: 0 10px;
            font-weight: 600;
            text-decoration: none;
            color: #7a3ca3;
        }

            .menu-superior a:hover {
                color: #9c54c3;
            }

    </style>
</head>

<body class="fondo-huellas">
    <!-- Navbar -->
    <header class="header-huellas">
        <div class="huellas-laterales">
            <img src="/images/NewFolder/huella violeta3.png" alt="Huella izquierda" class="huella">
            <nav class="menu-superior">
                <a asp-area="" asp-controller="Mascota" asp-action="Index">ADOPTÁ</a>
                <a asp-area="" asp-controller="Home" asp-action="Info">INFO</a>
                <a asp-area="" asp-controller="Home" asp-action="Dona">DONÁ</a>
                <a asp-area="" asp-controller="Mascota" asp-action="Adoptados">ADOPTADOS</a>
                <a asp-area="" asp-controller="Home" asp-action="FormContacto">Contacto</a>

                <a asp-area="Admin" asp-controller="Auth" asp-action="Login" class="btn-admin">SECCIÓN ADMIN</a>
            </nav>
            <img src="/images/NewFolder/huella violeta3.png" alt="Huella derecha" class="huella">
        </div>
    </header>


    <!-- Contenido de cada página -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="footer-fijo">
        <p>&copy; 2025 - Refugio de Mascotas</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>



