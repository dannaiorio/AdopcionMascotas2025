<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Refugio de Mascotas</title>

    <!-- CSS propio -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">🐾 Refugio</a>
                <div>
                    <a class="nav-link text-white" href="/">Inicio</a>
                    <a class="nav-link text-white" href="/Mascotas">Mascotas</a>
                    <a class="nav-link text-white" href="/Home/Privacy">Privacidad</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido de cada página -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <p>&copy; 2025 - Refugio de Mascotas</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
