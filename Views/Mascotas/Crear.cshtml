@model AdopcionMascotas.Models.Mascota

<h2>Agregar nueva Mascota</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Especie</label>
        <input asp-for="Especie" class="form-control" />
    </div>
    <div class="form-group">
        <label>Edad</label>
        <input asp-for="Edad" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control"
                asp-items="Html.GetEnumSelectList<AdopcionMascotas.Models.EstadoMascota>()">
        </select>
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a asp-controller="Mascotas" asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
