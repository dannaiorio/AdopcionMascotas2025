@{
    // T√≠tulo de la p√°gina y layout principal
    ViewData["Title"] = "Acceso Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Vista de login para el usuario administrador -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <!-- Tarjeta principal del formulario -->
            <div class="card mt-5 shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h4>üîê Acceso Administrador</h4>
                </div>

                <div class="card-body">
                    <!-- Muestra mensaje de error si las credenciales son incorrectas -->
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <!-- Formulario que env√≠a los datos al AuthController (m√©todo Login) -->
                    <form method="post" asp-action="Login" asp-controller="Auth" asp-area="Admin">

                        <!-- Campo de usuario -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario:</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>

                        <!-- Campo de contrase√±a -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Contrase√±a:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <!-- Bot√≥n de env√≠o -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Iniciar Sesi√≥n</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bot√≥n para volver al sitio p√∫blico -->
            <div class="text-center mt-3">
                <!-- Bot√≥n de retorno al inicio del sitio -->
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-outline-secondary">
                    ‚Üê Volver al sitio principal
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Personalizaci√≥n de la tarjeta y del bot√≥n */
    .card {
        border-radius: 10px;
        border: 1px solid #dcdcdc;
    }

    .card-header {
        background-color: #7a3ca3 !important; /* tono violeta institucional */
        border-radius: 10px 10px 0 0;
    }

    .btn-primary {
        background-color: #7a3ca3;
        border: none;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #9c54c3;
            transform: scale(1.03);
        }

    .btn-outline-secondary {
        border-radius: 30px;
    }

    body {
        background-color: #f8f9fa;
        background-image: url('/images/paws-bg.png'); /* opcional si ten√©s huellitas */
        background-repeat: repeat;
        background-size: contain;
    }
</style>

