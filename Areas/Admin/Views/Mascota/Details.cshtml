@model AdopcionMascotas.Models.Mascota

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mascota</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                    {
                        <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-fluid rounded"
                            style="max-height: 400px; width: 100%; object-fit: cover;" />
                    }
                    else
                    {
                        <div
                            style="height: 300px; background-color: #f8f9fa; border: 2px dashed #dee2e6; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                            <div style="text-align: center; color: #6c757d;">
                                <div style="font-size: 64px; margin-bottom: 15px;">📷</div>
                                <h5>No hay imagen disponible</h5>
                                <p><small>Esta mascota no tiene imagen asignada</small></p>
                                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-primary">
                                    📝 Agregar imagen
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Html.DisplayFor(model => model.Nombre)</strong>
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Especie)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary text-white">@Html.DisplayFor(model => model.Especie)</span>
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success text-white">@Html.DisplayFor(model => model.Estado)</span>
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Edad)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Edad) años
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>