@model AdopcionMascotas.Models.Mascota

<h2>Editar Mascota</h2>

<form method="post" enctype="multipart/form-data" action="/Admin/Mascotas/Edit/@Model.Id">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Especie</label>
        <select asp-for="Especie" class="form-control"
                asp-items="Html.GetEnumSelectList<AdopcionMascotas.Models.EspecieMascota>()"></select>
    </div>

    <div class="form-group">
        <label>Edad</label>
        <input asp-for="Edad" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control"
                asp-items="Html.GetEnumSelectList<AdopcionMascotas.Models.EstadoMascota>()"></select>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Imagen actual</label><br />
        @if (!string.IsNullOrEmpty(Model.Imagen))
        {
            <img src="@Model.Imagen" alt="@Model.Nombre" width="120" class="mb-2" />
        }
    </div>

    <div class="form-group">
        <label>Cambiar imagen</label>
        <input type="file" name="imagenArchivo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a href="/Admin/Mascotas" class="btn btn-secondary">Cancelar</a>
</form>
